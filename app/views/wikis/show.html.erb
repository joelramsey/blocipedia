<div class="container">
  <div class="row">
    <div class="col-md-3">
      <% if current_user.role == 'premium' || current_user.role == 'admin' %>
        <h3>Collaborators</h3>
        <%= render @collaborators %>
      <% end %>
    </div> 
    <div class="col-md-6">
      <h1> <%= markdown_to_html @wiki.title %> </h1> 
      <p> <%= markdown_to_html @wiki.body %> </p>
    </div>   
    <div class="col-md-8">
    <% if policy(@wiki).update? %>
      <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <% end %>
    </div> 
    
  </div>
</div>